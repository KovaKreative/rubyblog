<h1>New Post</h1>
<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, { :include_blank => "Choose Category" } %>
  </div>
  <div>
    <%= f.submit "Post Entry" %>
  </div>
<% end %>